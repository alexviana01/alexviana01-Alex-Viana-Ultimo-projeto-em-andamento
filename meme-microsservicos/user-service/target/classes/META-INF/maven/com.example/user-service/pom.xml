<project xmlns="http://maven.apache.org/POM/4.0.0" 
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <!-- 1. Referência ao projeto pai -->
    <!-- Ele herda as configurações do meme-microsservicos, como a versão do Spring Boot e do Java -->
    <parent>
        <groupId>com.example</groupId>
        <artifactId>meme-microsservicos</artifactId>
        <version>0.0.1-SNAPSHOT</version>
    </parent>

    <!-- 2. Informações deste módulo -->
    <artifactId>user-service</artifactId>
    <name>user-service</name>
    <description>Microsserviço para gerenciamento de usuários.</description>

    <!-- 3. Dependências específicas do user-service -->
    <dependencies>
        <!-- Para criar APIs REST (endpoints) -->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-web</artifactId>
        </dependency>

        <!-- Para interagir com o banco de dados (JPA) -->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-data-jpa</artifactId>
        </dependency>

        <!-- O banco de dados em memória H2 -->
        <dependency>
            <groupId>com.h2database</groupId>
            <artifactId>h2</artifactId>
            <scope>runtime</scope>
        </dependency>
        
        <!-- Para gerar métricas e monitoramento (observabilidade) -->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-actuator</artifactId>
        </dependency>

        <!-- Lombok: para reduzir código repetitivo (getters, setters, etc.) -->
        <dependency>
            <groupId>org.projectlombok</groupId>
            <artifactId>lombok</artifactId>
            <optional>true</optional>
        </dependency>
        
        <!-- Para testes -->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-test</artifactId>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <!-- 4. Plugin do Spring Boot para empacotar a aplicação -->
    <!-- Isso garante que nosso serviço será um .jar executável -->
    <build>
        <plugins>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
            </plugin>
        </plugins>
    </build>

</project>